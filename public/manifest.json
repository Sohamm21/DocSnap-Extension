{
  "manifest_version": 3,
  "name": "DocSnap",
  "version": "1.0",
  "description": "DocSnap: Quick Notes to Google Docs",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["storage", "identity", "contextMenus"],
  "host_permissions": ["https://docs.google.com/document/*"],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "764836380432-4aj2c3jo7nn2e5418tiqvt5s65iuommd.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.profile", "https://www.googleapis.com/auth/drive"]
  }
}
